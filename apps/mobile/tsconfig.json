{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // Override rootDir so app directory TSX files are included without TS6059
    "rootDir": "./",
    // React Native JSX support
    "jsx": "react-native",
    // Keep strict mode
    "strict": true,
    "lib": ["ES2022", "DOM"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
